--1.
CREATE TABLE RADM.SA_TRAN_ITEM_YJ_BAK AS
SELECT T.STORE,T.DAY,T.TRAN_SEQ_NO,T.ITEM FROM SA_TRAN_ITEM@RA_RMS_DBLINK T WHERE T.REF_NO5=99;

INSERT INTO RADM.W_RTL_SLS_TRX_IT_LC_DY_FS_0915
SELECT * FROM RADM.W_RTL_SLS_TRX_IT_LC_DY_FS;


--2.
TRUNCATE TABLE RADM.W_RTL_SLS_TRX_IT_LC_DY_FS;

INSERT INTO RADM.W_RTL_SLS_TRX_IT_LC_DY_FS
  SELECT *
    FROM RADM.W_RTL_SLS_TRX_IT_LC_DY_FS_0915 T
   WHERE EXISTS (SELECT 1
            FROM RADM.SA_TRAN_ITEM_YJ_BAK S
           WHERE T.SLS_TRX_ID = S.TRAN_SEQ_NO
             AND T.ORG_NUM = S.STORE
             AND T.PROD_IT_NUM = S.ITEM);
						 
UPDATE RADM.W_RTL_SLS_TRX_IT_LC_DY_FS T SET T.BBG_RETAIL_TYPE_ID=01 WHERE T.BBG_RETAIL_TYPE_ID=99;
						 
--3.
TRUNCATE TABLE RADM.C_LOAD_DATES;

--SIL
SELECT * FROM RABATCHER.W_RTL_SLS_TRX_IT_LC_DY_TMP;
