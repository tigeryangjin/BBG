SELECT *
  FROM ITEM_MASTER
 WHERE ITEM_DESC LIKE '%酒%'
   AND DEPT = 22
   AND ITEM_LEVEL = 3;
SELECT * FROM ITEM_LOC WHERE ITEM = '800020342';
SELECT * FROM ITEM_LOC_AVCOST WHERE ITEM = '800020342';
SELECT * FROM ITEM_COST_HEAD;
SELECT * FROM CLASS;
SELECT * FROM SUBCLASS;
SELECT * FROM ITEM_LOC_SOH;
SELECT ITEM, AVG(AV_COST) AV_COST FROM ITEM_LOC_SOH GROUP BY ITEM;
SELECT ITEM,
       AVG(SELLING_UNIT_RETAIL) SELLING_UNIT_RETAIL,
       AVG(PROMO_SELLING_RETAIL) PROMO_SELLING_RETAIL
  FROM ITEM_LOC
 GROUP BY ITEM;

SELECT IM.ITEM 商品编码,
       IM.SUBCLASS 小类编码,
       S.SUB_NAME 小类名称,
       IM.ITEM_DESC 商品名称,
       LV3.ITEM 国际条码,
       ILS.AV_COST 进价,
       IL.SELLING_UNIT_RETAIL 售价,
       IL.PROMO_SELLING_RETAIL 特售价
  FROM (SELECT ITEM,
               ROUND(AVG(SELLING_UNIT_RETAIL), 2) SELLING_UNIT_RETAIL,
               ROUND(AVG(PROMO_SELLING_RETAIL), 2) PROMO_SELLING_RETAIL
          FROM ITEM_LOC
         GROUP BY ITEM) IL,
       (SELECT ITEM, ROUND(AVG(AV_COST), 2) AV_COST
          FROM ITEM_LOC_SOH
         GROUP BY ITEM) ILS,
       ITEM_MASTER IM,
       SUBCLASS S,
       ITEM_MASTER LV3
 WHERE IM.ITEM = IL.ITEM(+)
   AND IM.ITEM = ILS.ITEM(+)
   AND S.SUBCLASS(+)=IM.SUBCLASS
   AND LV3.ITEM_PARENT=IM.ITEM
   AND IM.CLASS IN ('223', '224', '225', '228')
   AND IM.ITEM_LEVEL = 2
   AND IM.ITEM_DESC LIKE '%酒%'
 ORDER BY IM.ITEM_DESC;
